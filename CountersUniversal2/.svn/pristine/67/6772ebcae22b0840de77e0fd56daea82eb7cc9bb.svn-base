<Page
    x:Class="Counters.AddNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Counters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:WinRTXamlToolkit.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Margin="20,50" HorizontalAlignment="Stretch">
            <TextBlock Text="Число месяца" Foreground="Gray" FontSize="17"/>
            <DatePicker Name="dpDay" MonthVisible="False" YearVisible="False"/>
            <TextBlock Text="Время" Foreground="Gray" Margin="0,10,0,0" FontSize="17"/>
            <TimePicker Name="tpTime"/>
            <TextBlock Text="Текст напоминания" Foreground="Gray" Margin="0,10,0,0" FontSize="17"/>
            <TextBox Name="tbMessage" AcceptsReturn="True" TextWrapping="Wrap" Text="Снять показания счетчиков"/>
        </StackPanel>
    </ScrollViewer>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='1' Name="btnSave" Label="Сохранить" Icon="Accept"                      />
        </CommandBar>
    </Page.BottomAppBar>


</Page>

