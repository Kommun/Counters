<Page
    x:Class="Counters.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Counters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <local:AppSettings x:Key="settings"/>

    </Page.Resources>

    <Pivot>
        <PivotItem Header="Настройки">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Валюта" Foreground="Gray" FontSize="17"/>
                    <TextBox Name="tbCurrency"/>
                    <TextBlock Text="Напоминать о снятии показаний" Foreground="Gray" Margin="0,10,0,-20" FontSize="17"/>
                    <ToggleSwitch Name="isRememberOn" IsOn="{Binding isRememberOn, Source={StaticResource settings}, Mode=TwoWay}"/>
                    <TextBlock Text="Изменять положение экрана" Foreground="Gray" Margin="0,10,0,-20" FontSize="17"/>
                    <ToggleSwitch Name="btnOrientation" IsOn="{Binding AllowOrientation, Source={StaticResource settings}, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <Button x:ConnectionId='1' Name="btnFeedback" Content="Оставить отзыв"                           HorizontalAlignment="Stretch"/>
                    <Button x:ConnectionId='2' Name="btnBuy" Content="Купить полную версию"                      HorizontalAlignment="Stretch"/>
                    <HyperlinkButton x:ConnectionId='3' x:Name="btnMail"                       HorizontalAlignment="Center" Margin="0,10">
                        <TextBlock>
                          <Underline>
                            <Run Text="© Khmelenko Konstantin, 2015" FontSize="20"/>
                          </Underline>
                        </TextBlock>
                    </HyperlinkButton>
                </StackPanel>

            </Grid>
        </PivotItem>
    </Pivot>

</Page>

